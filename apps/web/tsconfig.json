{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "allowJs": true,
    "incremental": true,
    "types": ["react", "react-dom", "node"],
    "paths": {
      "@/flows/*": ["../../src/flows/*"],
      "@/ui/*": ["../../src/ui/*"],
      "@/lib/*": ["../../src/lib/*"],
      "@/api/*": ["../../src/api/*"],
      "@theme/*": ["../../src/theme/*"],
      "@kaveh/ui": ["../../shared/ui/src"],
      "@kaveh/core": ["../../shared/core/src"]
    },
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["app/**/*.ts", "app/**/*.tsx", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
