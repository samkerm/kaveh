{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/flows/*": ["src/flows/*"],
      "@/ui/*": ["src/ui/*"],
      "@/lib/*": ["src/lib/*"],
      "@/api/*": ["src/api/*"],
      "@/theme/*": ["src/theme/*"],
      "@/navigation/*": ["src/navigation/*"],
      "@kaveh/core": ["shared/core/src"],
      "@kaveh/ui": ["shared/ui/src"],
      "@tamagui-config": ["tamagui.config.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": ["node_modules", ".tamagui", "dist", "build", "web-build", "ios", "android", "apps"]
}
